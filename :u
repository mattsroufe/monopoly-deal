import {List, Map, fromJS} from 'immutable'

const initialState = Map({
  started: false,
  players: List(),
  deck: List(require('../cards.json'))
})

const monopolyDeal = (state = initialState, action) => {
  let players;
  switch (action.type) {
    case 'ADD_PLAYER':
      players = state.get('players').push({clientId: action.clientId, name: action.name})
      return state.set('players', players)
    case 'START_GAME':
      players = List();
      state.get('players').map((player) => {
        players = players.push({foo: 'bar'})
      });
      return state.merge({started: true}, {players: players})
    default:
      return state
  }
}

export default monopolyDeal
